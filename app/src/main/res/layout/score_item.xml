<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_200">

    <ImageView
        android:id="@+id/scoreScreenImageView"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/standingTextView"
        app:layout_constraintEnd_toEndOf="@+id/actorName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/standingTextView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:maxLength="10"
        android:maxLines="1"
        android:text="name"
        android:textColor="@color/magenta"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/standingTextView"
        app:layout_constraintStart_toEndOf="@+id/standingTextView"
        app:layout_constraintTop_toTopOf="@+id/standingTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/movesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:text="moves"
        android:textColor="@color/magenta"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/nameTextView"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintTop_toTopOf="@+id/nameTextView"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:text="time"
        android:textColor="@color/magenta"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/movesTextView"
        app:layout_constraintStart_toEndOf="@+id/movesTextView"
        app:layout_constraintTop_toTopOf="@+id/movesTextView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/standingTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="standing"
        android:textColor="@color/light_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>