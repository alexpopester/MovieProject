<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actorConstraintView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gameCreditsItemImage"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toStartOf="@+id/gameItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/forbidden" />

    <TextView
        android:id="@+id/actorName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:breakStrategy="balanced"
        android:ellipsize="none"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/gameCreditsItemImage"
        app:layout_constraintTop_toBottomOf="@+id/gameCreditsItemImage" />

    <TextView
        android:id="@+id/actorRoleTextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ellipsize="none"
        android:scrollHorizontally="false"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/actorName"
        app:layout_constraintTop_toBottomOf="@+id/actorName" />
</androidx.constraintlayout.widget.ConstraintLayout>