<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.LevelSelectFragment">

    <Button
        android:id="@+id/level3Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Level 3"
        app:layout_constraintBottom_toBottomOf="@+id/level2Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level2Button" />

    <Button
        android:id="@+id/level2Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="499dp"
        android:text="Level 2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/level3Button"
        app:layout_constraintStart_toEndOf="@+id/level1Button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/level1Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Level 1"
        app:layout_constraintBottom_toBottomOf="@+id/level2Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/level2Button" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/levelDetails"
        android:layout_width="409dp"
        android:layout_height="325dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/levelDetailsStartImage"
            android:layout_width="75dp"
            android:layout_height="123dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@android:drawable/ic_menu_gallery"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/levelDetailsExitButton" />

        <ImageButton
            android:id="@+id/levelDetailsExitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/levelDetailsLevelNumber"
            android:layout_width="188dp"
            android:layout_height="49dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="Level 0"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="@+id/levelDetailsExitButton"
            app:layout_constraintStart_toEndOf="@+id/levelDetailsExitButton"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startLevelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Start Level"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/levelDetailsEndImage"
            android:layout_width="75dp"
            android:layout_height="123dp"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_gallery"
            app:layout_constraintBottom_toBottomOf="@+id/levelDetailsStartImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/levelDetailsStartImage" />

        <TextView
            android:id="@+id/levelDetailsStartTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/levelDetailsStartImage"
            app:layout_constraintTop_toTopOf="@+id/levelDetailsStartImage" />

        <TextView
            android:id="@+id/levelDetailsEndTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="TextView"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/levelDetailsEndImage"
            app:layout_constraintEnd_toStartOf="@+id/levelDetailsEndImage" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="to"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/levelDetailsEndTitle"
            app:layout_constraintEnd_toStartOf="@+id/levelDetailsEndImage"
            app:layout_constraintStart_toEndOf="@+id/levelDetailsStartImage"
            app:layout_constraintTop_toBottomOf="@+id/levelDetailsStartTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>